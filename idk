-- Place this script inside a LocalScript in StarterPlayerScripts or StarterGui

-- Create a ScreenGui to hold the GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "C00lGUI"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create the Frame (the window)
local frame = Instance.new("Frame")
frame.Name = "C00lFrame"
frame.Size = UDim2.new(0, 400, 0, 300)
frame.Position = UDim2.new(0, 100, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(173, 216, 230) -- light blue color
frame.Parent = screenGui

-- Create the title label
local label = Instance.new("TextLabel")
label.Text = "Welcome to C00l GUI"
label.Size = UDim2.new(1, 0, 0, 40)
label.BackgroundTransparency = 1
label.Font = Enum.Font.Arial
label.TextSize = 24
label.TextColor3 = Color3.fromRGB(0, 0, 0)
label.Parent = frame

-- Create Close/Open button
local toggleButton = Instance.new("TextButton")
toggleButton.Text = "Close"
toggleButton.Size = UDim2.new(0, 100, 0, 40)
toggleButton.Position = UDim2.new(0, 150, 0, 250)
toggleButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
toggleButton.Parent = frame

-- Create Reset Gravity button
local resetButton = Instance.new("TextButton")
resetButton.Text = "Reset Gravity"
resetButton.Size = UDim2.new(0, 150, 0, 40)
resetButton.Position = UDim2.new(0, 125, 0, 200)
resetButton.BackgroundColor3 = Color3.fromRGB(255, 255, 0)
resetButton.Parent = frame

-- Variables for dragging the frame
local dragging = false
local dragStart = nil
local startPos = nil

-- Function to handle dragging
frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
    end
end)

frame.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

frame.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

-- Toggle the window visibility (Open/Close button)
toggleButton.MouseButton1Click:Connect(function()
    if frame.Visible then
        frame.Visible = false
        toggleButton.Text = "Open"
    else
        frame.Visible = true
        toggleButton.Text = "Close"
    end
end)

-- Reset gravity (reset window position)
resetButton.MouseButton1Click:Connect(function()
    frame.Position = UDim2.new(0, 100, 0, 100)  -- Reset to the default position
end)

-- Set initial state (open the GUI and set the button text to Close)
frame.Visible = true
toggleButton.Text = "Close"
