-- Roblox Script: FEX Hub GUI
local Player = game.Players.LocalPlayer
local Mouse = Player:GetMouse()
local ScreenGui = Instance.new("ScreenGui", Player.PlayerGui)
ScreenGui.Name = "FEXHub"

-- Main Frame (Movable)
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 400)
MainFrame.Position = UDim2.new(0, 50, 0, 50)
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MainFrame.Parent = ScreenGui
MainFrame.Active = true
MainFrame.Draggable = true  -- Makes the frame movable

-- Open/Close Buttons
local openButton = Instance.new("TextButton")
openButton.Size = UDim2.new(0, 100, 0, 50)
openButton.Position = UDim2.new(0, 0, 0, -60)
openButton.Text = "Open"
openButton.Parent = MainFrame
openButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)

local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 100, 0, 50)
closeButton.Position = UDim2.new(0, 0, 0, -60)
closeButton.Text = "Close"
closeButton.Parent = MainFrame
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)

-- Close function
closeButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

-- Open function
openButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = true
end)

-- Jump Power Slider
local jumpSlider = Instance.new("TextBox")
jumpSlider.Size = UDim2.new(0, 200, 0, 50)
jumpSlider.Position = UDim2.new(0, 50, 0, 50)
jumpSlider.PlaceholderText = "Jump Power"
jumpSlider.Parent = MainFrame
jumpSlider.BackgroundColor3 = Color3.fromRGB(100, 100, 100)

-- Speed Slider
local speedSlider = Instance.new("TextBox")
speedSlider.Size = UDim2.new(0, 200, 0, 50)
speedSlider.Position = UDim2.new(0, 50, 0, 120)
speedSlider.PlaceholderText = "Speed"
speedSlider.Parent = MainFrame
speedSlider.BackgroundColor3 = Color3.fromRGB(100, 100, 100)

-- RGB Self Button
local rgbSelfButton = Instance.new("TextButton")
rgbSelfButton.Size = UDim2.new(0, 200, 0, 50)
rgbSelfButton.Position = UDim2.new(0, 50, 0, 190)
rgbSelfButton.Text = "RGB Self"
rgbSelfButton.Parent = MainFrame
rgbSelfButton.BackgroundColor3 = Color3.fromRGB(0, 255, 255)

-- RGB All Button
local rgbAllButton = Instance.new("TextButton")
rgbAllButton.Size = UDim2.new(0, 200, 0, 50)
rgbAllButton.Position = UDim2.new(0, 50, 0, 260)
rgbAllButton.Text = "RGB All"
rgbAllButton.Parent = MainFrame
rgbAllButton.BackgroundColor3 = Color3.fromRGB(255, 0, 255)

-- Jump Power Slider Logic
jumpSlider.FocusLost:Connect(function()
    local value = tonumber(jumpSlider.Text)
    if value then
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = value
    end
end)

-- Speed Slider Logic
speedSlider.FocusLost:Connect(function()
    local value = tonumber(speedSlider.Text)
    if value then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
    end
end)

-- RGB Self Logic
rgbSelfButton.MouseButton1Click:Connect(function()
    local function changeColor()
        while wait(0.1) do
            game.Players.LocalPlayer.Character.HumanoidRootPart.BrickColor = BrickColor.Random()
        end
    end
    changeColor()
end)

-- RGB All Logic
rgbAllButton.MouseButton1Click:Connect(function()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Character then
            player.Character.HumanoidRootPart.BrickColor = BrickColor.Random()
        end
    end
end)
