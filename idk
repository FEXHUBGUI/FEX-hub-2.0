-- Script for a basic cool GUI
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Creating the main frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.5, 0, 0.5, 0)
mainFrame.Position = UDim2.new(0.25, 0, 0.25, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- Adding a title label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.2, 0)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.Text = "c00lkids GUI"
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 30
titleLabel.BackgroundTransparency = 1
titleLabel.Parent = mainFrame

-- Adding a cool button
local coolButton = Instance.new("TextButton")
coolButton.Size = UDim2.new(0.8, 0, 0.1, 0)
coolButton.Position = UDim2.new(0.1, 0, 0.3, 0)
coolButton.Text = "Press Me"
coolButton.Font = Enum.Font.GothamBold
coolButton.TextColor3 = Color3.fromRGB(255, 255, 255)
coolButton.TextSize = 24
coolButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
coolButton.BorderSizePixel = 0
coolButton.Parent = mainFrame

-- Button hover effect
coolButton.MouseEnter:Connect(function()
    coolButton.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
end)

coolButton.MouseLeave:Connect(function()
    coolButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
end)

-- Button click effect
coolButton.MouseButton1Click:Connect(function()
    print("Button Pressed!")
end)
