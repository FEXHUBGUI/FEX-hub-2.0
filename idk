-- CoreX Hub GUI Script with Tabs and Features

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local rootPart = character:WaitForChild("HumanoidRootPart")

-- GUI Setup
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "CoreXHub"
screenGui.ResetOnSpawn = false

-- Main Frame
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 300, 0, 300)
frame.Position = UDim2.new(0.5, -150, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Visible = true

-- Tabs Frame
local tabFrame = Instance.new("Frame", frame)
tabFrame.Size = UDim2.new(1, 0, 0, 30)
tabFrame.Position = UDim2.new(0, 0, 0, 0)
tabFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)

-- Tab Buttons
local tabNames = {"Player", "Visual", "Audio"}
local tabButtons = {}
local tabs = {}

for i, name in ipairs(tabNames) do
	local button = Instance.new("TextButton", tabFrame)
	button.Size = UDim2.new(0, 80, 1, 0)
	button.Position = UDim2.new(0, (i - 1) * 80, 0, 0)
	button.Text = name
	button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Font = Enum.Font.SourceSansBold
	button.TextSize = 16
	tabButtons[name] = button
end

-- Player Tab
local playerTab = Instance.new("Frame", frame)
playerTab.Size = UDim2.new(1, 0, 1, -30)
playerTab.Position = UDim2.new(0, 0, 0, 30)
playerTab.BackgroundTransparency = 1
tabs["Player"] = playerTab

-- Visual Tab
local visualTab = Instance.new("Frame", frame)
visualTab.Size = UDim2.new(1, 0, 1, -30)
visualTab.Position = UDim2.new(0, 0, 0, 30)
visualTab.BackgroundTransparency = 1
tabs["Visual"] = visualTab

-- Audio Tab
local audioTab = Instance.new("Frame", frame)
audioTab.Size = UDim2.new(1, 0, 1, -30)
audioTab.Position = UDim2.new(0, 0, 0, 30)
audioTab.BackgroundTransparency = 1
tabs["Audio"] = audioTab

-- UI Elements: Speed Slider
local slider = Instance.new("TextButton")
slider.Text = "Speed"
slider.Size = UDim2.new(0, 100, 0, 30)
slider.Position = UDim2.new(0, 25, 0, 10)
slider.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
slider.TextColor3 = Color3.new(1, 1, 1)
slider.Parent = playerTab

-- God Mode Toggle
local godToggle = Instance.new("TextButton")
godToggle.Text = "God Mode"
godToggle.Size = UDim2.new(0, 100, 0, 30)
godToggle.Position = UDim2.new(0, 25, 0, 50)
godToggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
godToggle.TextColor3 = Color3.new(1, 1, 1)
godToggle.Parent = playerTab

-- Helicopter Toggle
local heliToggle = Instance.new("TextButton")
heliToggle.Text = "Helicopter"
heliToggle.Size = UDim2.new(0, 100, 0, 30)
heliToggle.Position = UDim2.new(0, 25, 0, 90)
heliToggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
heliToggle.TextColor3 = Color3.new(1, 1, 1)
heliToggle.Parent = playerTab

-- ESP Toggle
local espToggle = Instance.new("TextButton")
espToggle.Text = "Toggle ESP"
espToggle.Size = UDim2.new(0, 100, 0, 30)
espToggle.Position = UDim2.new(0, 25, 0, 10)
espToggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
espToggle.TextColor3 = Color3.new(1, 1, 1)
espToggle.Parent = visualTab

-- Music Input
local musicInput = Instance.new("TextBox")
musicInput.PlaceholderText = "Enter Sound ID"
musicInput.Size = UDim2.new(0, 200, 0, 30)
musicInput.Position = UDim2.new(0, 25, 0, 10)
musicInput.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
musicInput.TextColor3 = Color3.new(1, 1, 1)
musicInput.Parent = audioTab

-- Play Music Button
local playMusicButton = Instance.new("TextButton")
playMusicButton.Text = "Play Music"
playMusicButton.Size = UDim2.new(0, 100, 0, 30)
playMusicButton.Position = UDim2.new(0, 25, 0, 50)
playMusicButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
playMusicButton.TextColor3 = Color3.new(1, 1, 1)
playMusicButton.Parent = audioTab

-- Music Toggle
local musicToggle = Instance.new("TextButton")
musicToggle.Text = "Music On/Off"
musicToggle.Size = UDim2.new(0, 100, 0, 30)
musicToggle.Position = UDim2.new(0, 25, 0, 90)
musicToggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
musicToggle.TextColor3 = Color3.new(1, 1, 1)
musicToggle.Parent = audioTab

-- Tab Switching Logic
local function switchTab(selected)
	for name, content in pairs(tabs) do
		content.Visible = (name == selected)
	end
end

-- Connect Tab Buttons
for name, button in pairs(tabButtons) do
	button.MouseButton1Click:Connect(function()
		switchTab(name)
	end)
end

-- Set default tab
switchTab("Player")
